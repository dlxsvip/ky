h3.page-header
    span 主机管理

.row(ng-controller="hostManageCtrl")
    .col-lg-12
        .col-lg-6
            .col-lg-3.change-ui-select-key
                ui-select.text-left(ng-model='selected.selected', theme='bootstrap', search-enabled='true', ng-disabled='disabled')
                    ui-select-match {{$select.selected}}
                    ui-select-choices(repeat='name in selected.name' ng-click='changeType()')
                        span(ng-bind-html='name')
            .col-lg-4
                input.form-control(type='text', placeholder='请输入{{selected.selected}}', ng-model='selected.searchValue', ng-change='getNullCondition()', ng-keyup='testEnter($event)')
            .col-lg-1
                button.btn.btn-primary(ng-click='searchCloudEcsDetail()') 查询
        .pull-right
            button.btn.brand-btn-color-a.brand-btn-abandon-focus(type='button', ng-click='fn_openSetColumnConfigsDialog()') 添加
            button.btn.brand-btn-color-a.btn-refresh(ng-click='searchCloudEcsDetail()') 移除
    .col-lg-12
        table.table.table-dtdream(ng-table='hostManage.tableParams', template-pagination='app/views/ngtable-foot.html', block-ui="hostManageBlockUI" )
            tbody
                tr(ng-repeat='item in $data' ng-class= "{ 'trActive': item.selected == true}")
                    td(header="'expandAllHeader'")
                        .checkbox.c-checkbox
                            label
                                input(type='checkbox', ng-model='item.selected', ng-click='choseOne($index)')
                                span.fa.fa-check
                    td(data-title="'主机名称'")
                        span {{item.instanceId}}
                    td(data-title="'主机地址'")
                        span {{item.instanceId}}
                    td(data-title="'采集状态'")
                        span {{item.instanceId}}
                    td(data-title="'位置'")
                        span {{item.instanceName}}
                    td(data-title="'描述'")
                        span {{item.instanceName}}
                    td(data-title="'操作'")
                        .btn-group(dropdown='dropdown', style='vertical-align:top')
                            a(href='', dropdown-toggle='') 管理
                            ul.dropdown-menu.animated.fadeInDown(role='menu')
                                li
                                    a(ui-sref='app.cloud-ecs-instancedetail') 开始采集
                                li
                                    a(href='#', ng-click='modifyEcsDialogOpen($index)') 停止采集
                                li
                                    a(href='#', ng-click='modifyEcsDialogOpen($index)') 移出列表
                tr.table-nodata-tr(ng-if='hostManage.tableParams.data==undefined || hostManage.tableParams.data.length==0')
                    td(colspan='11')
                        div.text-center
                            span.table-nodata-content(ng-show='!isLoading')
                                em.dtdream.dtdream-info-circle
                                | 没有符合条件的数据
script(type='text/ng-template', id='expandAllHeader')
    .checkbox.c-checkbox
        label
            input(type='checkbox',ng-click='setAllSelected()', ng-model='allsetlist.allset')
            span.fa.fa-check